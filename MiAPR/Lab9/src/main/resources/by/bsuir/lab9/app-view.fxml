           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         <TableView fx:id="tvObject" editable="true" layoutX="560.0" layoutY="400.0" prefHeight="73.0" prefWidth="200.0">
           <columns>
             <TableColumn prefWidth="75.0" text="0" />
             <TableColumn prefWidth="75.0" text="1" />
               <TableColumn prefWidth="75.0" text="2" />
               <TableColumn prefWidth="75.0" text="3" />
